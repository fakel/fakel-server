// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email    String @unique
  username String @unique
  password String

  reportsDone Int @default(0)

  summoners Summoner[]
  reports   Report[]
}

model Report {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  comment String
  // score tags
  afk     Boolean
  inter   Boolean
  troll   Boolean
  flamer  Boolean
  good    Boolean

  gameId   String
  region   String

  authorId Int
  author   User @relation(fields: [authorId], references: [id])

  summonerId String
  summoner   Summoner @relation(fields: [summonerId], references: [puuid])

  @@unique([gameId, region, summonerId])
}

model Summoner {
  puuid     String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  displayName  String
  internalName String

  reports Report[]

  // score tags
  afk    Int @default(0)
  inter  Int @default(0)
  troll  Int @default(0)
  flamer Int @default(0)
  good   Int @default(0)

  userId Int?
  user   User? @relation(fields: [userId], references: [id])
}
